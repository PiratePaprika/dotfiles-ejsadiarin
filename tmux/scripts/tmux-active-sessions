#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	selected=$1
else
	# selected=$(tmux list-sessions | fzf)
	selected=$(tmux list-sessions | cut -d: -f1 | fzf)
fi

# if session is not selected (empty, did not select anything in fzf), then exit
if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(cut -d: -f1 "$selected")
tmux_running=$(pgrep tmux)
# $TMUX is current tmux session running

# if has current tmux session running and no tmux session is running, then switch to selected
# if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
# 	tmux switch-client -t "$selected_name"
# 	tmux new-session -s $selected_name -c $selected
# 	exit 0
# fi

# if ! tmux has-session -t=$selected_name 2>/dev/null; then
# 	tmux new-session -ds $selected_name -c $selected
# fi

tmux switch-client -t $selected
