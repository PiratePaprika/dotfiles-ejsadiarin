[user]
	name = " ejsadiarin "
	email = " ejs@ejsadiarin.com "
	signingkey = /home/eisen/.ssh/id_ed25519.pub

[core]
    editor = nvim
    autocrlf = input

[color]
    ui = auto

[rebase]
	autoStash = True

[pull]
	rebase = True

# DIFF AND MERGE
[diff]
    algorithm = histogram
	colorMoved = True
    colorMovedWS = allow-indentation-change
	mnemonicPrefix = True

    tool = nvim_difftool
    submodule = diff

[diff "bin"]
    textconv = hexdump -v -C

[difftool]
	prompt = True
	trustExitCode = True

[difftool "nvim_difftool"]
    cmd = nvim -c \"DiffTool $LOCAL $REMOTE\"

[merge]
	log = True
    tool = nvimdiff2

[mergetool]
	prompt = True
	trustExitCode = True
	hideResolved = True

# ALIASES
[alias]
    undo = "reset HEAD~1 --mixed"
	diffview = "!f() { nvim -c \\\"DiffviewOpen\\\" \\\"$@\\\"; }; f"

[init]
	defaultBranch = main
