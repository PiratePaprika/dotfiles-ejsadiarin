#  General configuration

import:
  - ~/.config/alacritty/colors.yml
  - ~/.config/alacritty/fonts.yml
  
window:
  padding:
    x: 10
    y: 10

  decorations: none

  background_opacity: 0.20
  opacity: 0.75
  # background_opacity: 1
  # opacity: 1
  dynamic_title: true

  history: 10000
  multiplier: 3

selection:
  save_to_clipboard: false

cursor:
  style:
    shape: Block
    blinking: On
    
  unfocused_hollow: false 
  blink_interval: 550

live_config_reload: true
